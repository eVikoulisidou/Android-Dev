<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


        <ImageView
            android:id="@+id/logoR3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="23dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoR3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/text1R3"
                            android:layout_width="248dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="29dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="88dp"
                            android:layout_marginBottom="5dp"
                            android:fontFamily="sans-serif-black"
                            android:text="Δημιουργία ασθενή"
                            android:textColor="#000000"
                            android:textSize="25dp" />

                        <TextView
                            android:id="@+id/text2R3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="81dp"
                            android:layout_marginBottom="44dp"
                            android:fontFamily="sans-serif"
                            android:text="Συμπληρώστε τα στοιχεία του ασθενή"
                            android:textColor="#727272 "
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/nameTextR3"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginStart="29dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="20dp"
                            android:width="300.48dp"
                            android:height="63.05dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:inputType="textEmailAddress"
                            android:padding="16dp"
                            android:singleLine="false"
                            android:hint="Ονοματεπώνυμο"
                            android:textColor="#73000000"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/emailTextR3"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginStart="29dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="20dp"
                            android:width="300.48dp"
                            android:height="63.05dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:inputType="textEmailAddress"
                            android:padding="16dp"
                            android:rotationX="0"
                            android:singleLine="false"
                            android:hint="Εmail"
                            android:textColor="#73000000"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/addressTextR3"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginStart="29dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="20dp"
                            android:width="300.48dp"
                            android:height="63.05dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:inputType="textPostalAddress"
                            android:padding="16dp"
                            android:hint="Διεύθυνση κατοικίας"
                            android:textColor="#73000000"
                            android:textSize="15sp" />

                        <EditText
                            android:id="@+id/amkaTextR3"
                            android:layout_width="match_parent"
                            android:layout_height="63dp"
                            android:layout_marginStart="29dp"
                            android:layout_marginEnd="32dp"
                            android:layout_marginBottom="40dp"
                            android:width="300.48dp"
                            android:height="63.05dp"
                            android:background="@drawable/rounded_edittext"
                            android:ems="10"
                            android:fontFamily="sans-serif"
                            android:inputType="number"
                            android:padding="16dp"
                            android:hint="AMKA"
                            android:textColor="#73000000"
                            android:textSize="15sp" />

                        <Button
                            android:id="@+id/addButtonR3"
                            android:layout_width="match_parent"
                            android:layout_height="64dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="28dp"
                            android:layout_marginBottom="90dp"
                            android:width="300.48dp"
                            android:height="67dp"
                            android:backgroundTint="#67C0AB"
                            android:text="Προσθήκη ασθενή"
                            android:textColorHighlight="#67C0AB"
                            android:textColorLink="#67C0AB"
                            android:textSize="21sp" />

                </LinearLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>